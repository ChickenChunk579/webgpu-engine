{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "out",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["@webgpu/types"],
		"jsx": "react",
		"jsxFactory": "SceneTree.React.createElement",
		"jsxFragmentFactory": "SceneTree.React.Fragment"
	},
	"exclude": ["node_modules", "./*.ts", "__test__", "./src/platform-desktop.ts", "./src/main-desktop.ts"]
}